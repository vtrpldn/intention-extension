{
  "name": "Intention Extension",
  "version": "1.0.0",
  "description": "Reclaim meaninfullness browsing with this extension that makes you think about your digital habits.",
  "permissions": [
    "storage",
    "declarativeContent",
    "tabs"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": [
      "./js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "./html/popup.html"
  },
  "options_page": "./html/options.html",
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "./js/main.js"
      ]
    }
  ],
  "icons": {
    "16": "./img/icon16.png",
    "32": "./img/icon32.png",
    "48": "./img/icon48.png",
    "128": "./img/icon128.png"
  }
}