{
    "name": "Intention Extension",
    "version": "1.0.0",
    "description": "Reclaim meaninfullness browsing with this extension that makes you think about your digital habits.",
    "permissions": [
        "storage",
        "declarativeContent",
        "tabs"
    ],
    "manifest_version": 2,
    "background": {
        "scripts": [
            "./js/background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "./html/popup.html"
    },
    "options_page": "./html/options.html",
    "content_scripts": [
        {
          "matches": [
            "http://*/*",
            "https://*/*"
          ],
          "js": ["./js/main.js"]
        }
      ]
}
